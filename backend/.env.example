#backend/.env.example
# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sportsmanship
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=sportsmanship

# Security Configuration - MUST BE CHANGED IN PRODUCTION
# Generate a secure secret key using: python generate_secrets.py
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_DO_NOT_USE_DEFAULT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
APP_NAME=Sportsmanship App
APP_VERSION=1.0.0
DEBUG=False

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_APP_NAME=Sportsmanship App

# Admin Configuration - MUST BE CHANGED IN PRODUCTION
# Use a secure email and password
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD_DO_NOT_USE_DEFAULT

# CORS Configuration (add your domains)
# BACKEND_CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]